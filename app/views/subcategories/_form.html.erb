<%= form_for @subcategory, :html => { :class => "form-horizontal subcategory" } do |f| %>

    <% if @subcategory.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@subcategory.errors.count, "error") %> prohibited this subcategory from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @subcategory.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%= error_span(@subcategory[:name]) %>
  </div>
  <div class="control-group">
    <%= f.label :category_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.collection_select :category_id, Category.all, :id, :name, :class => 'form-control' %>
    </div>
    <%= error_span(@subcategory[:category_id]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            subcategories_path, :class => 'btn btn-default' %>

<% end %>
