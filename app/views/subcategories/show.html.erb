<%- model_class = Subcategory -%>
<div class="page-header">
  <h3><%=t '.title', :default => model_class.model_name.human.titleize %></h3>
</div>
<div class="col-md-12">
  <div class="col-md-4">
<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @subcategory.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:category_id) %>:</strong></dt>
  <dd><%= link_to @subcategory.category.name, category_path(@subcategory.category) %></dd>
  <dt></dt>
</dl>
</div>
<div class="col-md-4"></div>
<div class="col-md-4">
<%= link_to t('.back', :default => t("helpers.links.back")),
              subcategories_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_subcategory_path(@subcategory), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              subcategory_path(@subcategory),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
</div>
<div class="col-md-12">
<strong>Items:</strong>
<%= render partial: 'items/list'%>
</div>
